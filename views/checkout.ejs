<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>PCDragon</title>
  <!--Bootstrap CSS-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!--FontAwesome-->
  <script src="https://kit.fontawesome.com/262955342a.js" crossorigin="anonymous"></script>
  <!--Custom CSS-->
  <link href="/stylesheets/register.css" rel="stylesheet">
</head>

<body class="d-flex align-items-center py-4 bg-body-tertiary">
  <main class="form-signin w-100 m-auto">
    <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
      <img src="/images/logo.png" class="img-fluid">
    </a>
    <form>
      <h1 class="h3 mb-3 fw-normal text-center">Sign Up</h1>

      <div class="form-floating">
        <input type="text" class="form-control" id="firstName" required>
        <label for="firstName">First Name</label>
      </div>
      <div class="form-floating">
        <input type="text" class="form-control" id="lastName" required>
        <label for="lastName">Last Name</label>
      </div>
      <div class="form-floating">
        <input type="email" class="form-control" id="email" required>
        <label for="email">Email address</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" id="password" required>
        <label for="password">Password</label>
      </div>
      <div class="form-check pt-2 pb-2">
        <input type="checkbox" class="form-check-input" value="" id="checkbox" required>
        <label for="checkbox" class="form-check-label">I want to be a seller</label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
    </form>
    <p class="mt-3 text-center">
      Have an account? <a href="/login"> Log In!</a>
    </p>
  </main>
